- if defined?(locals) && locals[:no_links]
  .show_name=specialty_show.name
- else
  .show_name
    =link_to specialty_show.name, specialty_show
    -# TODO: check if the user has permissions to edit this show! If not, it's as follows
    -#= link_to_most_recent_episode specialty_show

.show_with
  -if specialty_show.hosts.count == 1
    = raw "with #{link_to(specialty_show.dj, specialty_show.dj)}"
  - else
    ="#{specialty_show.hosts.count} #{"DJ".pluralize(specialty_show.hosts.count)} in rotation"
