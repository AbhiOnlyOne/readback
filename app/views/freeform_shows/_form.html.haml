= form_for [@semester, @freeform_show] do |f|
  - if @freeform_show.errors.any?
    .alert
      - @freeform_show.errors.full_messages.each do |msg|
        %p= msg
  .field
    = f.label :name
    = f.text_field :name, tabindex: 10
  .field
    = f.label :description
    = f.text_area :description, {tabindex: 11, rows: 8}
  - if current_dj.can_create?(FreeformShow)
    .field
      = f.label :dj_id, 'DJ'
      %br
      = f.select :dj_id, active_for_select(f.object.dj), {}, tabindex: 12, class: 'chzn-select'
    .field
      = f.label :weekday
      = f.select :weekday, options_for_select(DateTime::DAYNAMES.map.with_index.to_a, f.object.weekday), {}, tabindex:13
    .field.field-beginning
      = f.label :beginning, 'Start'
      = f.time_field :beginning, value: format_time(f.object.beginning), tabindex: 14
    .field.field-ending
      = f.label :duration, raw('Duration&nbsp;(hrs)')
      = f.number_field :duration, step: 0.1, tabindex: 15
  .actions
    = f.submit 'Save freeform show', data: { disable_with: 'Saving...' }, tabindex: 16
