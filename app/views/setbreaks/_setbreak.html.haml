- can_bip = setbreak.episode == @on_air && on_fm_computer?
%td{colspan: 6}
  - if can_bip
    .delete-song=link_to '[x]', setbreak, method: :delete, data: {confirm: "Are you sure you want to delete this song?"}
  .setbreak
    %span
      setbreak
      -#= if on_fm_computer?
        -#= best_in_place_if can_bip, setbreak, :at, display_with: ->(str){'(' + just_time(setbreak.at) + ')'}, class: "sortable-at", inner_class: 'bip-sized', value: just_time(setbreak.at)
      - if on_fm_computer?
        = surround '(', ')' do
          %span.sortable-at<
            = setbreak.at.strftime('%-l:%M %P')
