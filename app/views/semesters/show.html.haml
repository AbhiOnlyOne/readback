- title "Show Schedule"
- headline "WCBN Schedule Beginning #{@semester.beginning.strftime "%B %-d, %Y"}"

%article
  %table.schedule
    %thead
      - ["", "Monday", "Tuesday", "Wednesday", "Thursday",
        "Friday", "Saturday", "Sunday"].each do |day|
        %td=day
    - @start_times.each do |time|
      %tr
        %th=time[:printable]
        - 1.upto 7 do |i|
          - s = @shows[time[:sortable]].select{|x| x.weekday == i % 7}
          - unless s.empty?
            %td.show{rowspan: rowspan(time, s.first.sort_times(:ending))}
              = render s
