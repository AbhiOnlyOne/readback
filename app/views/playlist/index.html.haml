- title "Playlist Input"

%aside.sidebar
  %a#now-button{href: "#now"}
    %span now
  %h1.accent Readback
  %p.subtitle The WCBN Database
  =render @on_air
  - if flash[:alert]
    .alert
      - flash[:alert].each do |err|
        =err
  = render 'songs/form'
  %br
  = render 'episodes/shownotes', episode: @on_air, editable: true

%article.with-sidebar.scroll-up
  %table.playlist
    %thead
    - @future_items.each do |item|
      %tr.grey
        =render item
    %tr#now.grey
      %td{colspan: 6}
        ⇧
        %span Next up on WCBN
        ⇧
        %br
    %thead
      %td Time
      %td Artist
      %td Song Title
      %td Album
      %td Label
      %td Year
    - @past_items.each do |item|
      %tr
        =render item
      -if item.is_a? Episode
        -unless item.notes.blank?
          %tr
            %td{colspan: 6}
              = render 'episodes/shownotes', episode: item
        %thead
          %td Time
          %td Artist
          %td Song Title
          %td Album
          %td Label
          %td Year

