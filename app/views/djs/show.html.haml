- title "#{@dj}"
%aside.thin-sidebar
  %h1.accent Readback
  %p.subtitle The WCBN Database

  .dj-shows
    - @shows.each do |name, shows|
      %h4=name
      %ul
        - shows.each do |show|
          %li=link_to show.semester.season, show
  .dj-recent-episodes
    %h4 Most Recent Episodes
    - @recent_episodes.each do |ep|
      =link_to episode_songs_path(ep), {class: %w(dj-recent-episode showinfo)} do
        %b=ep.show.name
        %p=ep.date_string


%header#headline.with-thin-sidebar.with-profile-pic
  %img.profile-pic{src: "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@dj.email)}?d=identicon&s=200&f=y"}
  %div
    %h2=@dj.dj_name || @dj.name.split(' ').first
    - if dj_signed_in? || @dj.real_name_is_public
      %p.subtitle.italic=@dj.name

%article.with-thin-sidebar.with-right-sidebar
  %section
    .dj-info
      %ul
        - if dj_signed_in?
          %li
            UM Affiliation:&nbsp;
            = @dj.um_dept
            = Dj::AFFILIATION_NAMES[@dj.um_affiliation]
          - if @dj.um_affiliated?
            %li
              UMID:
              = @dj.um_id
          %li
            Phone:
            = @dj.phone
          %li
            Email:
            = link_to @dj.email, "mailto://#{@dj.email}"
            %br
        - unless @dj.website.blank?
          %li
            URL:
            = link_to @dj.website_name, @dj.website
        - unless @dj.public_email.blank?
          %li
            = "#{"Public " if dj_signed_in?}Email:"
            = link_to @dj.public_email, "mailto://#{@dj.public_email}"
    .dj-about
      = markdown @dj.about

  - unless @dj.lists.blank?
    %aside.right-sidebar
      .dj-lists
        = markdown @dj.lists
